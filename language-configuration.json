{
	"comments": {
		// symbol used for single line comment. Remove this entry if your language does not support line comments
		"lineComment": "//",
		// symbols used for start and end a block comment. Remove this entry if your language does not support block comments
		"blockComment": [ "/*", "*/" ]
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(module|interface|function|typeclass|instance|method|action|actionvalue|rule)[^=]*[=;]$",
        "decreaseIndentPattern": "^\\s*end(module|interface|function|typeclass|instance|method|action|actionvalue|rule)$"
    },
	// symbols used as brackets
	"brackets": [
		["{", "}"],
		["[", "]"],
        ["(", ")"],
        ["package", "endpackage"],
        ["module", "endmodule"],
        ["interface", "endinterface"],
        ["rule", "endrule"],
        ["function", "endfunction"],
        ["seq", "endseq"]
    ],
    //autoclosing
    "autoClosingPairs" : [
        ["'", "'"],
        ["\"", "\""]
    ],
    "surroundingPairs": [
        ["'", "'"],
        ["\"", "\""]
    ]
}